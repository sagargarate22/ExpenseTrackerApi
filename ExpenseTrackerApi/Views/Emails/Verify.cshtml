@model VerifyDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
    <style>
        /* Basic reset */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container-lg {
            background-color: #ffffff;
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        .header {
            background-color: #007bff;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            text-align: center;
        }

            .header h2 {
                color: #ffffff;
                margin: 0;
                font-size: 24px;
            }

        p {
            font-size: 16px;
            color: #333;
            margin: 15px 0;
        }

        .otp {
            font-size: 24px;
            color: #007bff;
            background-color: #f9f9f9;
            padding: 10px;
            border: 2px dashed #007bff;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            margin-top: 20px;
            font-size: 14px;
            color: #888;
            text-align: center;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }

            .footer p {
                margin: 5px 0;
            }
    </style>
</head>
<body>
    <div class="container-lg">
        <div class="header">
            <h2>Email Verification</h2>
        </div>
        <p>Dear <strong>@Model.Username</strong>,</p>
        <p>Thank you for registering with us! To complete your registration and verify your email address, please use the One-Time Password (OTP) below:</p>

        <div class="otp">@Model.Otp</div>

        <p>This code is valid for the next <strong>[Timeframe]</strong>. Please use it as soon as possible.</p>
        <p>If you did not request this, please ignore this email.</p>

        <div class="footer">
            <p>Thank you,<br>Support@Expanese.com Support Team</p>
        </div>
    </div>
</body>
</html>


